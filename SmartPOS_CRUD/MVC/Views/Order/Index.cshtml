@model IEnumerable<MVC.Models.mvcOrderModel>


<div class="container-fluid">

   
    <!-- DataTales Example -->
    <div class="card shadow-lg my-5">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Order History</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="ui celled table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price(Per Product)</th>
                            <th>Total Price</th>
                            <th>Date</th>
                            <th>Customer Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <h4 class="ui image header">
                                    <img src="~/Content/images/icons/office.jpg" class="ui mini rounded image">
                                    <div class="content">
                                        Lena
                                        <div class="sub header">
                                            Human Resources
                                        </div>
                                    </div>
                                </h4>
                            </td>
                            <td>
                                quantity
                            </td>
                            <td>
                                price per
                            </td>
                            <td>
                                total
                            </td>
                            <td>
                                date
                            </td>
                            <td>
                                customer Name
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProdId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderQuantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProdId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImagePath)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            
</div>
</div>